{
    "name": "renovation-agent-monorepo",
    "private": true,
    "packageManager": "pnpm@10.29.1",
    "scripts": {
        "dev:frontend": "pnpm --filter frontend dev",
        "dev:backend": "pnpm --filter renovation-agent-backend dev",
        "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
        "build:frontend": "pnpm --filter frontend build",
        "build:backend": "pnpm --filter renovation-agent-backend build",
        "lint": "pnpm -r lint",
        "db:generate": "pnpm --filter renovation-agent-backend db:generate",
        "db:migrate": "pnpm --filter renovation-agent-backend db:migrate",
        "db:seed": "pnpm --filter renovation-agent-backend db:seed"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "pnpm": {
        "overrides": {
            "esbuild": ">=0.25.0"
        }
    }
}
{
  "name": "renovation-agent-backend",
  "version": "1.0.0",
  "description": "AI-powered renovation planning assistant backend",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "prep": "npm run lint && npm run build",
    "test:unit": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "db:generate": "tsx node_modules/drizzle-kit/bin.cjs generate",
    "db:migrate": "tsx node_modules/drizzle-kit/bin.cjs migrate",
    "db:studio": "tsx node_modules/drizzle-kit/bin.cjs studio"
  },
  "keywords": [
    "express",
    "typescript",
    "nodejs",
    "langchain",
    "socket.io",
    "drizzle",
    "ai-agent"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bull-board/api": "^6.18.0",
    "@bull-board/express": "^6.18.0",
    "@google/generative-ai": "^0.24.1",
    "@langchain/core": "^1.1.12",
    "@langchain/google-genai": "^2.1.12",
    "@langchain/langgraph": "^1.0.13",
    "@langchain/langgraph-checkpoint-postgres": "^1.0.0",
    "@sentry/node": "^10.38.0",
    "@sentry/profiling-node": "^10.38.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@supabase/supabase-js": "^2.90.1",
    "bullmq": "^5.69.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.38.3",
    "express": "^4.22.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.3",
    "langchain": "^1.2.7",
    "pg": "^8.13.1",
    "rate-limiter-flexible": "^9.1.1",
    "resend": "^6.9.2",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.5",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.2",
    "globals": "^15.15.0",
    "socket.io-client": "^4.8.3",
    "supertest": "^7.1.0",
    "testcontainers": "^11.11.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^3.0.5"
  }
}
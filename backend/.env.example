# ==============================================
# Renovation Agent Backend - Environment Variables
# ==============================================
# Copy this file to .env and fill in the values.

# --- Required (Phases 1-7) ---
NODE_ENV=development
PORT=3000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/renovation_agent
GOOGLE_API_KEY=your-google-api-key-here
FRONTEND_URL=http://localhost:3001

# --- Optional ---
LOG_LEVEL=info                        # debug | info | warn | error
LANGGRAPH_CHECKPOINTER=memory         # memory | postgres

# --- Redis (graceful fallback if unavailable) ---
REDIS_URL=redis://localhost:6379

# --- Supabase Auth (Optional - Phase 8) ---
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --- Supabase Storage (Optional - Phase 2.1) ---
# SUPABASE_STORAGE_BUCKET=room-assets
# SUPABASE_STYLE_BUCKET=style-assets

# --- Sentry Error Tracking (Optional) ---
# SENTRY_DSN=https://your-sentry-dsn
# SENTRY_ENVIRONMENT=development

# --- Email / Resend (Optional) ---
# RESEND_API_KEY=re_your-api-key
# FROM_EMAIL=Renovation Agent <noreply@yourdomain.com>

# --- OpenTelemetry (Optional - Phase IV: Observability) ---
OTEL_ENABLED=true
OTEL_SERVICE_NAME=renovation-agent-backend
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_EXPORTER_OTLP_HEADERS=x-honeycomb-team=YOUR_API_KEY
OTEL_TRACES_SAMPLER_ARG=0.1
OTEL_LOG_LEVEL=info

# --- Stripe (Optional - Phase 9) ---
# STRIPE_SECRET_KEY=sk_test_your-key
# STRIPE_WEBHOOK_SECRET=whsec_your-secret
